<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor"
    android:paddingHorizontal="@dimen/_16dp"
    android:paddingVertical="@dimen/_9dp">

    <ImageView
        android:id="@+id/img_company"
        android:layout_width="@dimen/_48dp"
        android:layout_height="@dimen/_48dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_placeholder_card_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_vacancy"
        style="@style/mediumText_22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12dp"
        android:text="@string/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_company"
        app:layout_constraintTop_toTopOf="@+id/img_company" />

    <TextView
        android:id="@+id/tv_company"
        style="@style/regularText_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_vacancy"
        app:layout_constraintTop_toBottomOf="@+id/tv_vacancy" />

    <TextView
        android:id="@+id/tv_salary"
        style="@style/regularText_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_company"
        app:layout_constraintTop_toBottomOf="@+id/tv_company" />

</androidx.constraintlayout.widget.ConstraintLayout>
