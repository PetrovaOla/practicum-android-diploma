<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/backgroundColor"
    android:paddingVertical="@dimen/_9dp">

    <TextView
        android:id="@+id/area_text"
        style="@style/text_filter_empty"
        tools:text="@string/empty_list"
        android:textColor="@color/filter_text"
        app:layout_constraintEnd_toStartOf="@id/area_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/area_btn"
        style="@style/image_filter"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@id/area_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/area_text" />
</androidx.constraintlayout.widget.ConstraintLayout>
