<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolBar">
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_19dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_64dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="contentInsetStartWithNavigation">@dimen/_12dp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:fontWeight">@dimen/fontWeight500</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
    </style>

    <style name="SearchField">
        <item name="android:background">@drawable/bg_searchfield</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">55</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/_36dp</item>
        <item name="android:layout_height">@dimen/_36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="developers">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
    </style>

    <style name="boldText_32">
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="mediumText_22">
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="mediumText_16">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="regularText_16">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="regularText_12">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ErrorPlaceholder">
        <item name="android:textAppearance">@style/mediumText_22</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:drawablePadding">@dimen/_16dp</item>
    </style>

    <style name="SearchStatus">
        <item name="android:background">@drawable/bg_search_status</item>
        <item name="android:paddingVertical">@dimen/_4dp</item>
        <item name="android:paddingHorizontal">@dimen/_12dp</item>
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:textColor">@color/white_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="text_filter_empty">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/filter_text</item>
        <item name="android:fontWeight">400</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingVertical">@dimen/_20dp</item>
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_filter" parent="text_filter_empty">
        <item name="android:textColor">@color/filter_text</item>

    </style>

    <style name="image_filter">
        <item name="backgroundTint">?attr/backgroundColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="input_filter">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/hintInput</item>
        <item name="android:textColorHint">?attr/colorTertiaryContainer</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidth">@dimen/_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/_0dp</item>
        <item name="android:textCursorDrawable">"@drawable/cursor"</item>
        <item name="cursorColor">?attr/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="counterMaxLength">10</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="placeholderTextColor">?attr/colorTertiaryContainer</item>
    </style>

    <style name="hintInput">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="filter_region">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">?attr/backgroundColor</item>
        <item name="hintTextAppearance">@style/hintInput</item>
        <item name="android:textColorHint">"@color/blue"</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeWidthFocused">@dimen/_0dp</item>
        <item name="boxStrokeWidth">@dimen/_0dp</item>
        <item name="android:textColor">@color/filter_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="placeholderTextColor">@color/gray</item>
        <item name="endIconTint">@color/black</item>

    </style>

    <style name="check">
        <item name="backgroundTint">?attr/backgroundColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_apply">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="FilterSearchFieldLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_56dp</item>
        <item name="android:layout_marginVertical">@dimen/_8dp</item>
        <item name="endIconDrawable">@drawable/ic_close_black</item>
        <item name="endIconTint">@color/black</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">false</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidth">@dimen/_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/_0dp</item>
        <item name="android:textCursorDrawable">"@drawable/cursor"</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="placeholderTextColor">?attr/hintTextColor</item>
    </style>

    <style name="FilterSearchField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_searchfield</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="placeholderTextColor">?attr/hintTextColor</item>
    </style>

</resources>
